{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src", "prisma", "index.ts"],  
  "exclude": [
  "node_modules",
  "**/*.test.ts",
  "**/*.spec.ts",
  "jest.config.ts"
]
}
