{
  "name": "gamerchallengescda-back",
  "type": "module",
  "scripts": {
    "======= Pour le dev ========": "========================",
    "dev": "tsx watch --env-file=.env index.ts",
    "test": "cross-env NODE_ENV=TEST NODE_OPTIONS=--experimental-vm-modules dotenv -e .env.test -- jest --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "docker:up": "docker compose up -d --build",
    "docker:start:dev": "npm i && npx prisma generate && npx prisma migrate dev --name init && npm run dev",
    "db:generate:test": "dotenv -e .env.test -- npx prisma generate --schema=prisma/schema.test.prisma",
    "db:seed": "docker compose exec gamer-challenges-api npx tsx --env-file=.env prisma/seeding.ts",
    "db:migrate:test":"dotenv -e .env.test -- npx prisma migrate dev --name init --schema=prisma/schema.test.prisma",
    "db:migrate:reset": "docker compose exec gamer-challenges-api npx prisma migrate reset --force",
    "db:migrate:dev": "docker compose exec gamer-challenges-api npx prisma migrate dev --name init",
    "db:generate": "docker compose exec gamer-challenges-api npx prisma generate",
    "db:reinit": "npm run db:migrate:reset && npm run db:migrate:dev && npm run db:generate && npm run db:seed"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.31.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/express-xss-sanitizer": "^2.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.12",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.31.0",
    "jest": "^30.2.0",
    "prisma": "^6.16.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@types/cors": "^2.8.19",
    "argon2": "^0.44.0",
    "axios": "^1.10.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-xss-sanitizer": "^2.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "prettier": "^3.6.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0",
    "zod": "^4.1.9"
  }
}
